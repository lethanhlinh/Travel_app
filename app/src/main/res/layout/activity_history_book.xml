<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back"
                android:contentDescription="Back icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lịch sử Book"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <!-- Tabs -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:radius="16dp"
            android:gravity="center"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/tab_booked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:backgroundTint="#FAC3C3"
                android:padding="10dp"
                android:text="Đã Book"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tab_cancelled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Đã Hủy"
                android:textSize="20sp"
                android:layout_marginStart="24dp"
                android:backgroundTint="#DEDEDE"
                android:background="@drawable/rounded_button"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tab_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Đánh Giá"
                android:textSize="20sp"
                android:layout_marginStart="24dp"
                android:backgroundTint="#DEDDDD"
                android:background="@drawable/rounded_button"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- Search bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@color/white"
            android:padding="10dp"
            android:layout_marginTop="16dp">

            <EditText
                android:id="@+id/search_bar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Search"
                android:textSize="16sp"
                android:background="@null" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="85dp"
                android:layout_height="42dp"
                android:text="Tìm Kiếm"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/blue_bg"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="2dp" />
        </LinearLayout>

        <!-- Tour 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#F8D9D9"
            android:padding="10dp"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tour Bà Nà HiLLs"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="540km"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xem Thêm"
                    android:textColor="@android:color/holo_blue_light"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <ImageView
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:src=""
                android:contentDescription="Tour Bà Nà HiLLs image" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FAD7D7"
            android:padding="10dp"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cố Đô Huế"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1240km"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xem thêm"
                    android:textColor="@android:color/holo_blue_light"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <ImageView
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:src=""
                android:contentDescription="Cố Đô Huế image" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>