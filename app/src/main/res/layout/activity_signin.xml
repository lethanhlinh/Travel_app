<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/nentravelapp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Travel App"
        android:textSize="40sp"
        android:textColor="#1D82E4"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="200dp"
        android:padding="16dp"
        android:background="@android:color/white"
        android:layout_marginHorizontal="24dp"
        android:clipToPadding="false"
        android:paddingBottom="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EMAIL"
            android:textColor="@android:color/darker_gray" />

        <EditText
            android:id="@+id/emailTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="youremail@example.com"
            android:padding="10dp"
            android:inputType="textEmailAddress"
            android:background="@drawable/edit_text_background" /> <!-- Nên tạo một drawable cho EditText -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PASSWORD"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/passWordTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="********"
            android:padding="10dp"
            android:inputType="textPassword"
            android:background="@drawable/edit_text_background" /> <!-- Nên tạo một drawable cho EditText -->

        <TextView
            android:id="@+id/textViewForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quên mật khẩu"
            android:textColor="@android:color/holo_blue_light"
            android:layout_marginTop="10dp"
            android:layout_gravity="end" />

        <Button
            android:id="@+id/buttonSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SIGN IN"
            android:background="@drawable/rounded_button"
            android:textColor="@android:color/white"
            android:layout_marginTop="20dp"
            android:padding="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bạn chưa có tài khoản ? SIGN UP"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="141dp"

        android:layout_marginTop="660dp"
        android:layout_marginEnd="140dp"
        android:gravity="center"
        android:text="Đăng nhập với "
        android:textSize="24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/image_facebook"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_fb"
            android:contentDescription="Facebook"
            android:layout_marginEnd="16dp" />

        <ImageView
            android:id="@+id/image_google"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_gg"
            android:contentDescription="Google"
            android:layout_marginEnd="16dp" />

        <ImageView
            android:id="@+id/image_yahoo"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_zalo"
            android:contentDescription="Yahoo" />
    </LinearLayout>
</RelativeLayout>