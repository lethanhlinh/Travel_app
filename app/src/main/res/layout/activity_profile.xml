<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#90C3F4"
        tools:layout_editor_absoluteX="170dp"
        tools:layout_editor_absoluteY="48dp">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:contentDescription="Profile Picture"
            android:src="@drawable/profile" />

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:text="Your Name"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/profile_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:text="email@example.com" />

        <TextView
            android:id="@+id/textView7"
            android:drawableLeft="@android:drawable/ic_menu_myplaces"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Chỉnh sửa thông tin"
            android:layout_gravity="center"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/setting"
            android:drawableLeft="@android:drawable/ic_menu_set_as"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Cài đặt"
            android:layout_gravity="center"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/booktour"
            android:drawableLeft="@android:drawable/ic_menu_directions"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Lịch sử Đặt Tours"
            android:layout_gravity="center"
            android:textSize="20sp" />
    </LinearLayout>
    <com.ismaeldivita.chipnavigation.ChipNavigationBar
        android:id="@+id/thanhmenu"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:cnb_menuResource="@menu/menu_bottom"
        android:background="@color/white"
        android:elevation="3dp"
        android:padding="4dp"
        app:cnb_iconSize="20sp"
        app:cnb_iconColor = "@color/darkBlue"
        app:cnb_radius="50dp"
        app:cnb_orientationMode="horizontal"
        app:cnb_unselectedColor="@color/darkBlue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>